@using FamiliBudget.Serv.Entity;

@model List<User>
<div class="container">
	
	<div class="my-3 p-3 bg-white rounded shadow-sm">
		<h6 class="border-bottom border-gray pb-2 mb-0">Пользователи</h6>
		@foreach(var user in Model)
		{
			<div class="media text-muted pt-3 border-bottom">
				<p class="media-body pb-3 mb-0 small lh-125">
					<strong class="d-block text-gray-dark">@user.Login</strong>
				</p>
				@Html.ActionLink("Редактировать", "Edit", "User", new { userId = user.ID }, new { htmlAttributes = new { @class = "btn" } })
			</div>
		}
	</div>
</div>